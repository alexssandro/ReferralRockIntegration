@model ReferralRockIntegration.Web.Models.ReferralViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="flex flex-col">
    <div class="col-md-4">
        <form action="/ref/create" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="ReferralCode" type="hidden"/>            
            
            <div class="form-group">
                <label asp-for="FirstName" class="text-gray-600 font-light"></label>
                <input asp-for="FirstName" class="w-full mt-2 mb-6 px-6 py-3 border rounded-lg text-lg text-gray-700 focus:outline-none" maxlength="20" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="text-gray-600 font-light"></label>
                <input asp-for="LastName" class="w-full mt-2 mb-6 px-6 py-3 border rounded-lg text-lg text-gray-700 focus:outline-none" maxlength="20" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="text-gray-600 font-light"></label>
                <input asp-for="Email" class="w-full mt-2 mb-6 px-6 py-3 border rounded-lg text-lg text-gray-700 focus:outline-none" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="w-full block px-7 py-3 rounded-md text-white bg-blue-400 hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" />
            </div>
        </form>
    </div>
</div>